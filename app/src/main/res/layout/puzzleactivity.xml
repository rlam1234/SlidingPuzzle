<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="net.ddns.raylam.sliding_puzzle.AppActivity">

    <TableLayout
        android:background="@drawable/customborder"
        android:layout_gravity="center"
        android:gravity="center_horizontal"
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TableRow
            android:layout_weight="1"
            android:gravity="center_horizontal">
            <ImageView
                android:id="@+id/tile00"
                android:background="@drawable/customborder"
                android:scaleType="fitCenter"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:layout_margin="@dimen/tileMargin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <ImageView
                android:id="@+id/tile01"
                android:background="@drawable/customborder"
                android:scaleType="fitCenter"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:layout_margin="@dimen/tileMargin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <ImageView
                android:id="@+id/tile02"
                android:background="@drawable/customborder"
                android:scaleType="fitCenter"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:layout_margin="@dimen/tileMargin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </TableRow>
        <TableRow
            android:layout_weight="1"
            android:gravity="center_horizontal">
            <ImageView
                android:id="@+id/tile10"
                android:background="@drawable/customborder"
                android:scaleType="fitCenter"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:layout_margin="@dimen/tileMargin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <ImageView
                android:id="@+id/tile11"
                android:background="@drawable/customborder"
                android:scaleType="fitCenter"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:layout_margin="@dimen/tileMargin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <ImageView
                android:id="@+id/tile12"
                android:background="@drawable/customborder"
                android:scaleType="fitCenter"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:layout_margin="@dimen/tileMargin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </TableRow>
        <TableRow
            android:layout_weight="1"
            android:gravity="center_horizontal">
            <ImageView
                android:id="@+id/tile20"
                android:background="@drawable/customborder"
                android:scaleType="fitCenter"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:layout_margin="@dimen/tileMargin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <ImageView
                android:id="@+id/tile21"
                android:background="@drawable/customborder"
                android:scaleType="fitCenter"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:layout_margin="@dimen/tileMargin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <ImageView
                android:id="@+id/tile22"
                android:scaleType="fitCenter"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:layout_margin="@dimen/tileMargin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </TableRow>
    </TableLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:padding="@dimen/borderPadding"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:text="Time: "
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/elapsedTime"
                android:text="00:00:00"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_centerInParent="true"
            android:padding="@dimen/borderPadding"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <Button
            android:id="@+id/newPuzzle"
            android:text="New Puzzle"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:padding="@dimen/borderPadding"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:text="Moves: "
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/moves"
                android:text="000"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
